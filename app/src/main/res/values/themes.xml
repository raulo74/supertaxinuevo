<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SuperTaxi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        
        <!-- AÑADIR ESTAS LÍNEAS PARA MODO DÍA -->
        <!-- Color de la barra de estado (superior) -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        
        <!-- Color de la barra de navegación (inferior con botones del sistema) -->
        <item name="android:navigationBarColor">@color/white</item>
        
        <!-- Color de los iconos de la barra de navegación - OSCUROS para contraste con fondo blanco -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        
        <!-- Color de los iconos de la barra de estado - CLAROS para contraste con fondo azul -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.SuperTaxi" parent="Base.Theme.SuperTaxi" />
</resources>